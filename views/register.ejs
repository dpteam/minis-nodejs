<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | VK</title>
    <link rel="stylesheet" href="/css/vk2008.css">
</head>
<body>
    <div class="vk-container">
        <!-- Верхняя панель -->
        <div class="vk-header">
            <div class="vk-logo">
                <a href="/">vk</a>
            </div>
            <div class="vk-nav">
                <ul>
                    <li><a href="/">Главная</a></li>
                    <li><a href="/login">Вход</a></li>
                </ul>
            </div>
        </div>

        <div class="vk-content-wrapper">
            <!-- Центральная колонка -->
            <div class="vk-center-column">
                <div class="vk-register-box">
                    <div class="vk-register-header">
                        <h3>Регистрация</h3>
                    </div>
                    <% if (error) { %>
                        <div class="vk-error-message">
                            <%= error %>
                        </div>
                    <% } %>
                    <form action="/register" method="post">
                        <div class="vk-form-group">
                            <label for="firstName">Имя</label>
                            <input type="text" id="firstName" name="firstName" required>
                        </div>
                        <div class="vk-form-group">
                            <label for="lastName">Фамилия</label>
                            <input type="text" id="lastName" name="lastName" required>
                        </div>
                        <div class="vk-form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                        <div class="vk-form-group">
                            <label for="password">Пароль</label>
                            <input type="password" id="password" name="password" required>
                        </div>
                        <div class="vk-form-group">
                            <label for="confirmPassword">Подтверждение пароля</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" required>
                        </div>
                        <div class="vk-form-actions">
                            <button type="submit">Зарегистрироваться</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Подвал -->
        <div class="vk-footer">
            <div class="vk-footer-links">
                <a href="/">О ВКонтакте</a>
                <a href="/">Правила</a>
                <a href="/">Реклама</a>
                <a href="/">Вакансии</a>
            </div>
            <div class="vk-footer-copyright">
                © 2008 ВКонтакте
            </div>
        </div>
    </div>
</body>
</html>