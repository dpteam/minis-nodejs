<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Minis</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .navbar-brand { font-weight: bold; }
        .message-card { margin-bottom: 1rem; }
        .avatar { width: 40px; height: 40px; border-radius: 50%; }
        .notification-badge { position: absolute; top: -5px; right: -5px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">üé≠ Minis</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/feed">Feed</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/messages">Messages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/friends">Friends</a>
                        </li>
                        <% if (user.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin">Admin</a>
                            </li>
                        <% } %>
                    <% } %>
                </ul>
                
                <ul class="navbar-nav">
                    <% if (user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle position-relative" href="#" id="notificationDropdown" 
                               data-bs-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                <% if (unreadCount && unreadCount > 0) { %>
                                    <span class="badge bg-danger notification-badge"><%= unreadCount %></span>
                                <% } %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">Notifications</h6></li>
                                <li><a class="dropdown-item" href="/notifications">View all</a></li>
                            </ul>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown">
                                <img src="<%= user.avatar || '/images/default-avatar.png' %>" 
                                     alt="<%= user.firstName %>" class="avatar me-2">
                                <%= user.firstName %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/users/<%= user.id %>">My Profile</a></li>
                                <li><a class="dropdown-item" href="/users/<%= user.id %>/edit">Edit Profile</a></li>
                                <li><a class="dropdown-item" href="/notifications">Notifications</a></li>
                                <li><a class="dropdown-item" href="/settings">Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout">Logout</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/register">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <% if (typeof messages !== 'undefined' && messages && messages.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= messages.success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (typeof messages !== 'undefined' && messages && messages.error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= messages.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <% if (user) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Create New Message</h5>
                    </div>
                    <div class="card-body">
                        <form id="newMessageForm">
                            <div class="mb-3">
                                <textarea class="form-control" id="messageContent" rows="3" 
                                          placeholder="What's on your mind?" required></textarea>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <select class="form-select form-select-sm" id="visibility" style="width: auto;">
                                        <option value="public">Public</option>
                                        <option value="friends">Friends Only</option>
                                        <option value="private">Private</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Post Message</button>
                            </div>
                        </form>
                    </div>
                </div>
                <% } %>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">Public Feed</h4>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" 
                                data-bs-toggle="dropdown">
                            Filter ‚ñº
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">All Messages</a></li>
                            <li><a class="dropdown-item" href="#">Following</a></li>
                            <li><a class="dropdown-item" href="#">Mentions</a></li>
                        </ul>
                    </div>
                </div>

                <% if (feed && feed.rows && feed.rows.length > 0) { %>
                    <% feed.rows.forEach(message => { %>
                        <div class="card message-card">
                            <div class="card-body">
                                <div class="d-flex align-items-start">
                                    <img src="<%= message.author && message.author.avatar ? message.author.avatar : '/images/default-avatar.png' %>" 
                                         alt="<%= message.author ? message.author.firstName : 'Unknown' %>" 
                                         class="avatar me-3">
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">
                                                    <% if (message.author) { %>
                                                        <%= message.author.firstName %> <%= message.author.lastName %>
                                                    <% } else { %>
                                                        Unknown User
                                                    <% } %>
                                                </h6>
                                                <small class="text-muted">
                                                    <%= new Date(message.postTime).toLocaleString() %>
                                                </small>
                                            </div>
                                            <div>
                                                <span class="badge bg-<%= message.visibility === 'public' ? 'success' : message.visibility === 'friends' ? 'warning' : 'secondary' %>">
                                                    <%= message.visibility %>
                                                </span>
                                            </div>
                                        </div>
                                        <p class="mt-2 mb-3"><%= message.content %></p>
                                        <div class="d-flex gap-3">
                                            <button class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-heart"></i> Like
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-comment"></i> Reply
                                            </button>
                                            <button class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-share"></i> Share
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                    
                    <% if (totalPages > 1) { %>
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                    <% } %>
                <% } else { %>
                    <div class="text-center py-5">
                        <h5>No messages yet</h5>
                        <p class="text-muted">Be the first to share something with the community!</p>
                        <% if (user) { %>
                            <button class="btn btn-primary" onclick="document.getElementById('messageContent').focus()">
                                Create Message
                            </button>
                        <% } else { %>
                            <a href="/auth/login" class="btn btn-primary">Login to Post</a>
                        <% } %>
                    </div>
                <% } %>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">About Minis</h5>
                    </div>
                    <div class="card-body">
                        <p>A minimalist social network made with Node.js.</p>
                        <div class="d-grid">
                            <% if (!user) { %>
                                <a href="/auth/login" class="btn btn-outline-primary">Login</a>
                                <a href="/auth/register" class="btn btn-primary mt-2">Register</a>
                            <% } else { %>
                                <a href="/users/<%= user.id %>" class="btn btn-outline-primary">My Profile</a>
                                <a href="/settings" class="btn btn-primary mt-2">Settings</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-light mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Minis</h5>
                    <p>A minimalist social network made with Node.js</p>
                </div>
                <div class="col-md-3">
                    <h6>Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/privacy">Privacy</a></li>
                        <li><a href="/terms">Terms</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Connect</h6>
                    <ul class="list-unstyled">
                        <li><a href="https://github.com/dpteam/minis-nodejs" target="_blank">GitHub</a></li>
                        <li><a href="/api/docs">API Docs</a></li>
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <p>&copy; <%= new Date().getFullYear() %> Minis. Made with ‚ù§Ô∏è using Node.js</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('newMessageForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const content = document.getElementById('messageContent').value;
                const visibility = document.getElementById('visibility').value;
                
                fetch('/api/messages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + localStorage.getItem('token')
                    },
                    body: JSON.stringify({
                        content: content,
                        visibility: visibility
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error posting message');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error posting message');
                });
            });
        }
    });
    </script>
</body>
</html>